{
  "name": "YouTube Retro Downloader",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "npm install && pip install yt-dlp",
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "visibility": "public"
    },
    "3001": {
      "label": "Backend API",
      "visibility": "public"
    }
  }
}
